  "item": [
    {
      "name": "Create book",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "function randomTitleRu() {",
              "  const adjectives = [\"Тихий\", \"Скрытый\", \"Тёмный\", \"Яркий\", \"Потерянный\", \"Золотой\", \"Атомный\", \"Неоновый\"];",
              "  const nouns = [\"Город\", \"Лес\", \"Океан\", \"Алгоритм\", \"Империя\", \"Сигнал\", \"Библиотека\", \"Протокол\"];",
              "  const ts = Date.now().toString(36);",
              "  const rnd = Math.random().toString(36).slice(2, 7);",
              "  return `${adjectives[Math.floor(Math.random()*adjectives.length)]} ${nouns[Math.floor(Math.random()*nouns.length)]} ${ts}-${rnd}`;",
              "}",
              "",
              "pm.collectionVariables.set(\"bookTitle\", randomTitleRu());"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Код 201\", () => {",
              "  pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Время /лимита\", () => {",
              "  const limit = Number(pm.collectionVariables.get(\"maxResponseTimeMs\") || 1000);",
              "  pm.expect(pm.response.responseTime).to.be.below(limit);",
              "});",
              "",
              "pm.test(\"ID есть, title совпал\", () => {",
              "  const json = pm.response.json();",
              "  pm.expect(json.id).to.exist;",
              "  pm.expect(json.title).to.eql(pm.collectionVariables.get(\"bookTitle\"));",
              "  pm.collectionVariables.set(\"bookId\", String(json.id));",
              "});"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"{{bookTitle}}\",\n  \"author\": \"Postman\",\n  \"year\": 2026\n}",
